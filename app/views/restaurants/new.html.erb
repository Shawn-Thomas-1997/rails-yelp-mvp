<div class="container text-center">
  <div class="card shadow p-4 mb-4">
    <h1>Add a Restaurant</h1>

    <%= simple_form_for(@restaurant, html: { class: "mt-4" }) do |f| %>
      <div class="form-group">
        <%= f.input :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.input :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], class: "form-control" %>
      </div>

      <%= f.submit "Create Restaurant", class: "btn btn-primary mt-2" %>
    <% end %>

    <div class="mt-2">
      <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
