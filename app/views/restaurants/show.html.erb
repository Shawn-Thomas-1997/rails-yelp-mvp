<div class="container text-center">
  <div class="card shadow p-4 mb-4">
    <h2><%= @restaurant.name %></h2>
    <p><%= @restaurant.address %></p>
    <p><strong><%= @restaurant.category.capitalize %></strong></p>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= "#{review.content} - Rating: #{review.rating}" %></li>
      <% end %>
    </ul>
    <div class="mt-4">
      <%= link_to "Leave Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
      <br>
      <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-secondary mt-2" %>
    </div>
  </div>
</div>
